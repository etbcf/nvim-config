{
    "languageserver": {

    },

    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit",
        "h": "open:split"
    },
    "explorer.git.enable": true
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck"
    },
    "sh.enable": true,
    "sh.format.enable": true,
    "sh.format.command": "shfmt",
    "sh.format.args": [
        "-i", "2",   // Indentation set to 2 spaces
        "-ci",       // Switch case indentation
        "-sr"        // Simplify the script (removes redundant code)
    ],

    // Automatically format shell scripts on save
    "coc.preferences.formatOnSaveFiletypes": [
      "sh"
    ],
    "snippets.ultisnips.pythonPrompt": false
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "black",
    "python.formatting.blackArgs": ["--line-length", "79"],
    "coc.preferences.formatOnSaveFiletypes": ["python"]
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
}
